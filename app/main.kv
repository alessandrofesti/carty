            size_hint_y: .1
            pos_hint: {'top': 0.65, 'center_x': 0.5}
            hint_text: 'Insert your email address'
            mode: "line"
            color_mode: 'accent'
            icon_right: 'email'
        MDFillRoundFlatButton:
            pos_hint: {'top': 0.55, 'center_x': 0.5}
            size_hint_x: .7
            size_hint_y: .05
            text:'Send reset email'
            on_press:
                app.SendResetEmail()
                root.manager.current = 'login'
        MDTextButton:
            text: 'Login'
            pos_hint: {'top': 0.45, 'center_x': 0.5}
            font_size: "14sp"
            on_press:
                root.manager.current = 'login'

