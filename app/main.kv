#: import utils kivy.utils
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)
    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<ContentNavigationDrawer>:
    ScrollView:
        MDList:
            id: container
            OneLineListItem:
                text: "How it works"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "screen howitworks"
            OneLineListItem:
                text: "Join existing group"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "screen join group"

ScreenManager:
    HelloScreen:
    MainScreen:
    LoginScreen:
    SignupScreen:
    InputScreen:
    ForgotPasswordScreen:
    LoadingScreen:

<HelloScreen>:
    id: hello
    name: 'hello'
    MDLabel:
        id: carty
        text: 'CARTY'
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: (153,0,153)
        font_style: 'H1'
        font_size: sp(50)
    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .3}
        active: True
    MDLabel:
        text: 'Optimize your party shifts'
        pos_hint: {'center_x':0.5,'center_y':0.44}
        theme_text_color: 'Custom'
        text_color: (153,0,153)
        halign: 'center'
        font_style: 'H1'
        font_size: sp(15)
        helper_text_mode: "on_focus"

<LoadingScreen>:
    id: loadingscreen
    name: 'loadingscreen'
    MDLabel:
        id: loading_carty
        text: 'CARTY'
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: (153,0,153)
        font_style: 'H1'
        font_size: sp(50)
    MDSpinner:
        id: loading_spinner
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .3}
        active: True
    MDLabel:
        text: 'Optimize your party shifts'
        pos_hint: {'center_x':0.5,'center_y':0.44}
        theme_text_color: 'Custom'
        text_color: (153,0,153)
        halign: 'center'
        font_style: 'H1'
        font_size: sp(15)
        helper_text_mode: "on_focus"

<MainScreen>:
    id: main
    name: 'main'
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Ciao Bello"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open") if nav_drawer.state == 'close' else nav_drawer.set_state("close")]]
        right_action_items: [["plus-circle", lambda x: app.root.get_screen('main').change_screen('scr add group')]]
    MDNavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height
        ScreenManager:
            id: screen_manager
            MDScreen:
                id: screen_add_group
                name: "scr add group"
                MDFloatLayout:
                    size: root.width, root.height
                    canvas.before:
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDIconButton:
                        icon: 'dice-multiple'
                        user_font_size: "45sp"
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        pos_hint: {'top': 0.95, 'center_x': 0.5}
                    MDTextField:
                        id: group_name
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.8, 'center_x': 0.5}
                        hint_text: 'Group name'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'account'
                    MDTextField:
                        id: group_password
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.7, 'center_x': 0.5}
                        hint_text: 'Group Password'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'onepassword'
                    MDTextField:
                        id: group_destination_city
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.6, 'center_x': 0.5}
                        hint_text: 'Group destination city'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'google-maps'
                    MDTextField:
                        id: group_destination_address
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.5, 'center_x': 0.5}
                        hint_text: 'Group destination address'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'google-maps'
                    MDTextField:
                        id: user_departure_city
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.4, 'center_x': 0.5}
                        hint_text: 'Your departure city'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'google-maps'
                    MDTextField:
                        id: user_departure_address
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.3, 'center_x': 0.5}
                        hint_text: 'Your departure address'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'google-maps'
                    MDTextField:
                        id: user_n_avaliable_places
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.2, 'center_x': 0.5}
                        hint_text: 'Your avaliable places'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'account-group'
                    MDFillRoundFlatButton:
                        pos_hint: {'top': 0.1, 'center_x': 0.5}
                        size_hint_x: .7
                        size_hint_y: .05
                        text:'Create new group'
                        on_press: root.create_new_group()

            MDScreen:
                id: howitworks_screen
                name: 'screen howitworks'
                FloatLayout:
                    size_hint: 0.95, 0.5
                    padding: [0, 0, 0, 0]
                    spacing: dp(5)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    MDIconButton:
                        icon: 'dice-multiple'
                        user_font_size: "45sp"
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        pos_hint: {'top': 1, 'center_x': 0.5}
                    MDLabel:
                        text:"Carty helps you and your team optimize the car shifts based on the avaliable free places on each car. Carty will find the optimal solution to share people without car among the existing free places by minimizing the distance each driver has to do to pick up the people \n - Join an existing group (ask any of the members for the password).  \n - Create a new group and share the password among friends to let them join it.  \n - Insert your Data (address, avaliable free places if any).  \n - Run the simulation."
                        halign:"center"
                        pos_hint: {'top': 0.6, 'center_x': 0.5}


            MDScreen:
                id: screen_join_group
                name: "screen join group"
                MDFloatLayout:
                    size: root.width, root.height
                    canvas.before:
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDIconButton:
                        icon: 'dice-multiple'
                        user_font_size: "45sp"
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        pos_hint: {'top': 0.9, 'center_x': 0.5}
                    MDTextField:
                        id: join_group_name
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.7, 'center_x': 0.5}
                        hint_text: 'Group name'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'account'
                    MDTextField:
                        id: join_group_password
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.6, 'center_x': 0.5}
                        hint_text: 'Group Password'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'onepassword'
                    MDFillRoundFlatButton:
                        pos_hint: {'top': 0.5, 'center_x': 0.5}
                        size_hint_x: .7
                        size_hint_y: .05
                        text:'Join exixsting group'
                        on_press: root.join_existing_group()
            MDScreen:
                id: screen_modify_group_destination
                name: "screen modify group destination"
                MDFloatLayout:
                    size: root.width, root.height
                    canvas.before:
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDIconButton:
                        icon: 'dice-multiple'
                        user_font_size: "45sp"
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        pos_hint: {'top': 0.9, 'center_x': 0.5}
                    MDTextField:
                        id: modify_group_destination_address
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.7, 'center_x': 0.5}
                        hint_text: 'Group destination address'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'google-maps'
                    MDTextField:
                        id: modify_group_destination_city
                        halign: "center"
                        size_hint_x: .6
                        size_hint_y: .1
                        pos_hint: {'top': 0.6, 'center_x': 0.5}
                        hint_text: 'Group destination city'
                        mode: "line"
                        color_mode: 'accent'
                        icon_right: 'google-maps'
                    MDFillRoundFlatButton:
                        pos_hint: {'top': 0.5, 'center_x': 0.5}
                        size_hint_x: .7
                        size_hint_y: .05
                        text:'Change group destination address'
                        on_press: root.modify_group_destination()

        MDNavigationDrawer:
            type: "standard"
            id: nav_drawer
            ContentNavigationDrawer:
                id: contentnavigationdrawer
                screen_manager: screen_manager
                nav_drawer: nav_drawer

<LoginScreen>:
    id: login
    name:'login'
    MDFloatLayout:
        size: root.width, root.height
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
        MDIconButton:
            icon: 'dice-multiple'
            user_font_size: "45sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            pos_hint: {'top': 0.85, 'center_x': 0.5}
        MDTextField:
            id:login_email
            halign: "center"
            size_hint_x: .6
            size_hint_y: .1
            pos_hint: {'top': 0.65, 'center_x': 0.5}
            hint_text: 'Email'
            mode: "line"
            color_mode: 'accent'
            icon_right: 'email'
        MDTextField:
            id:login_password
            halign: "center"
            size_hint_x: .6
            size_hint_y: .1
            pos_hint: {'top': 0.55, 'center_x': 0.5}
            hint_text: 'Password'
            mode: "line"
            color_mode: 'accent'
            icon_right: 'onepassword'
        MDFillRoundFlatButton:
            pos_hint: {'top': 0.45, 'center_x': 0.5}
            size_hint_x: .7
            size_hint_y: .05
            text:'Login'
            on_press:
                app.login()
        MDTextButton:
            text: 'Create an account'
            pos_hint: {'top': 0.35, 'center_x': 0.5}
            font_size: "14sp"
            on_press:
                root.manager.current = 'signup'
        MDTextButton:
            text: 'Forgot password'
            pos_hint: {'top': 0.3, 'center_x': 0.5}
            font_size: "14sp"
            on_press:
                root.manager.current = 'resetpassword'


